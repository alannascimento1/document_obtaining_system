<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 shadow-md">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 shadow-md rounded-lg">
    <tr>
      <% if header %>
        <%= header %>
      <% else %>
        <th scope="col" class="px-6 py-3">
          <span class="flex items-center justify-center">Nome</span>
        </th>
        <th scope="col" class="px-6 py-3"> 
          <span class="flex items-center justify-center">Editar</span>
        </th>
        <th scope="col" class="px-6 py-3">
          <span class="flex items-center justify-center">Excluir</span>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= set_rows %>
  </tbody>
</table>
