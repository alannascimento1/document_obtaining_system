  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 shadow-md rounded-lg">
    <tr>
      <% if header %>
        <%= header %>
      <% else %>
        <th scope="col" class="px-6 py-3"> Nome </th>
        <th scope="col" class="px-6 py-3"> Editar </th>
        <th scope="col" class="px-6 py-3"> Excluir </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= set_rows %>
  </tbody>
</table>
