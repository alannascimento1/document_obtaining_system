<%= turbo_stream.update "form_document_record_content_frame_#{@institution.id}" do %>
  <div data-controller="load-flowbite">
    <%= render Alert::Component.new(title: flash.now[:notice]) %>
  </div>
  <form class="p-4 md:p-5" action=<%= document_records_path %> method="post" data-turbo="true" data-turbo-frame="form_document_record_content_frame">
    <input type="hidden" id="institution_id" name="document_record[institution_id]" value="<%= @institution.id %>">
    <input type="hidden" id="state" name="document_record[state]" value="Recebido">
    <div class="grid gap-4 mb-4 grid-cols-2">
      <div class="col-span-2 mb-2">
        <label for="institutions" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Selecione o tipo de documento</label>
        <select id="institutions" name="document_record[document_type_id]"class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
          <option selected>Escolha o Tipo de Documento</option>
          <% DocumentType.all.each do |document_type| %>
            <option value="<%= document_type.id %>"><%= document_type.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="grid gap-4 mb-4 grid-cols-2">
      <div class="col-span-2">
        <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Recebido de:</label>
        <input type="text" name="document_record[received_from]" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="">
      </div>
    </div>
    <div class="grid gap-4 mb-4 grid-cols-2">
      <div class="col-span-2">
        <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Informações Extras:</label>
        <input type="text" name="document_record[information]" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="">
      </div>
    </div>
    <div class="grid gap-4 mb-4 grid-cols-2">
      <div class="flex flex-col col-span-2">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Existe pendência?</label>
        <div class="flex flex-row space-x-2">
          <input type="checkbox" id="is_pending" class="peer w-2 h-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block  p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="">
          <input type="text" name="document_record[pendency]" id="pending_information" class="peer-checked:block hidden bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="">
        </div>
      </div>
    </div>
    <div class="grid gap-4 mb-4 grid-cols-2">
      <div class="flex flex-col col-span-2">
        <div class="flex flex-row space-x-2">
          <input type="month" name="document_record[reference_date]" id="reference_date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="">
        </div>
      </div>
    </div>
    <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
      <svg class="me-1 -ms-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
      </svg> Salvar
    </button>
  </form>
<% end %>
