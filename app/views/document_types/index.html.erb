              <td class="px-6 py-4">
                <form action="<%= edit_document_type_path(document_type.id) %>" method="post" data-turbo="true" data-turbo-frame="form_edit_document_type_content_frame" data-remote="true">
                  <div data-action="click->open-modal-by-click#show">
                    <input type="hidden" name="_method" value="get">
                    <button type="submit" class="text-blue-500 hover:text-blue-700">Editar</button>
                  </div>
                </form>
              </td>
              <td class="px-6 py-4">
                <form action="<%= document_type_path(document_type.id) %>" method="post" data-turbo="true" data-remote="true">
                  <input type="hidden" name="_method" value="delete">
                  <button type="submit" class="text-blue-500 hover:text-blue-700">Excluir</button>
                </form>
              </td>
            </tr>
          <% end %>
