<section class="flex flex-col space-y-3 mt-10">
  <div class="flex flex-row justify-between">
    <form class="flex w-4/6">
      <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
      <div class="relative w-full">
        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
          <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
          </svg>
        </div>
        <input type="search" id="default-search" class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Buscar por nome da instituição" required>
        <button type="submit" class="text-white absolute end-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Pesquisar</button>
      </div>
    </form>
    <div data-controller="open-modal-by-click" class="flex w-2/6 justify-end">
      <button type="button" data-action="click->open-modal-by-click#show" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-blue-700 border border-transparent rounded-md hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        <svg class="w-4 h-4 mr-2 -ml-1 text-white" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" clip-rule="evenodd" d="m10 3a7 7 0 1 0 0 14 7 7 0 0 0 0-14Zm0 12a5 5 0 1 1 0-10 5 5 0 0 1 0 10Z" />
          <path d="m10 1a9 9 0 1 0 0 18 9 9 0 0 0 0-18Zm0 16a7 7 0 1 1 0-14 7 7 0 0 1 0 14Z" />
        </svg>
        <span>Cadastrar Recebimento</span>
      </button>
      <div id="create-document_record-modal" data-open-modal-by-click-target="modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative p-4 w-full max-w-md max-h-full">
          <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white"> Registrar Recebimento </h3>
              <button type="button" data-action="click->open-modal-by-click#hide" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg>
                <span class="sr-only">Close modal</span>
              </button>
            </div>

            <form class="p-4 md:p-5" action=<%= document_records_path %> method="post" data-turbo="true" data-turbo-frame="form_document_record_content_frame">
              <%= turbo_frame_tag :form_document_record_content_frame do %>
                <div class="grid gap-4 mb-4 grid-cols-2">
                  <div class="col-span-2 mb-2">
                    <label for="institutions" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Selecione o setor</label>
                    <select id="institutions" name="document_record[document_type_id]"class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                      <option selected>Escolha o Tipo de Documento</option>
                      <% @document_types.each do |document_type| %>
                        <option value="<%= document_type.id %>"><%= document_type.name %></option>
                      <% end %>
                    </select>
                  </div>
                </div>
                <div class="grid gap-4 mb-4 grid-cols-2">
                  <div class="col-span-2 mb-2">
                    <label for="institutions" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Selecione o setor</label>
                    <select id="institutions" name="document_record[institution_id]"class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                      <option selected>Escolha uma Instituição</option>
                      <% @institutions.each do |institution| %>
                        <option value="<%= institution.id %>"><%= institution.name %></option>
                      <% end %>
                    </select>
                  </div>
                </div>
                <div class="grid gap-4 mb-4 grid-cols-2">
                  <div class="col-span-2">
                    <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Recebido de:</label>
                    <input type="text" name="document_record[received_from]" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Nome do setor" required="">
                  </div>
                </div>
                <div class="grid gap-4 mb-4 grid-cols-2">
                  <div class="col-span-2">
                    <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Informações Extras:</label>
                    <input type="text" name="document_record[information]" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Nome do setor" required="">
                  </div>
                </div>
                <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                  <svg class="me-1 -ms-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
                  </svg> Salvar
                </button>
              <% end %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg" data-controller="open-modal-by-click">
    <%= turbo_frame_tag :document_records_list_frame do %>
      <%= render Table::Component.new() do |c| %>
        <% c.with_header do %>
          <th scope="col" class="px-6 py-3"> Documento </th>
          <th scope="col" class="px-6 py-3"> Data da Entrega </th>
          <th scope="col" class="px-6 py-3"> Estado </th>
          <th scope="col" class="px-6 py-3"> Instituição </th>
          <th scope="col" class="px-6 py-3"> Editar </th>
          <th scope="col" class="px-6 py-3"> Excluir </th>
        <% end %>
        <% c.with_set_rows do %>
          <% @document_records&.each do |document_record|%>
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"> <%= document_record.document_type.name %> </th>
              <td class="px-6 py-4">
                <%= document_record.created_at.strftime("%d/%m/%Y às %H:%M") %>
              </td>
              <td class="px-6 py-4">
                <% if document_record.state %>
                  <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Entregue</span>
                <% else %>
                  <span class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Não Entregue</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <%= document_record.institution.name %>
              </td>
              <td class="px-6 py-4">
                <form action="<%= edit_document_record_path(document_record.id) %>" method="post" data-turbo="true" data-turbo-frame="form_edit_document_record_content_frame" data-remote="true">
                  <div data-action="click->open-modal-by-click#show">
                    <input type="hidden" name="_method" value="get">
                    <button type="submit" class="text-blue-500 hover:text-blue-700">Editar</button>
                  </div>
                </form>
              </td>
              <td class="px-6 py-4">
                <form action="<%= document_record_path(document_record.id) %>" method="post" data-turbo="true" data-remote="true">
                  <input type="hidden" name="_method" value="delete">
                  <button type="submit" class="text-blue-500 hover:text-blue-700">Excluir</button>
                </form>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <div id="edit-document-record-modal" data-open-modal-by-click-target="modal" tabindex="-1" aria-hidden="true" class="p-2 hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
      <div class="relative p-4 w-full max-w-md max-h-full p-2">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 p-6">
          <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white"> Editar Instituição </h3>
            <button type="button" data-action="click->open-modal-by-click#hide" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
          </div>

          <%= turbo_frame_tag :form_edit_document_record_content_frame do %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
